<%- include('header.ejs') %>
<%- include('nav.ejs') %>
    
    <!-- =============== Conteúdo ================== -->
    <div class="container mt-5 pt-5">
        <header class="text-center">
            <h1>Books Online
                <small>Market Place de Livros</small>
            </h1>
        </header>
        <!-- =============== Cadastro ================== -->
        <div class="row container">
            <div class="container-fluid col-sm-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Cadastro de novos clientes</h4>
                        <form action="" method="POST" class="mt-2 mb-2">
                            <fieldset>
                            <legend>Preencha todos os campos</legend>
                            <ul class="list-unstyled">
                                <li>
                                    <label class="mt-3">Nome:</label>
                                    <input class="form-control" name="us_nome" id="nome_cadastro" >
                                </li>
                                <li>
                                    <label class="mt-3">Email:</label>
                                    <input class="form-control" name="us_email" id="email_cadastro" >
                                </li>
                                <li>
                                    <label class="mt-3">Telefone:</label>
                                    <input class="form-control" name="us_telefone" id="telefone_cadastro" >
                                </li>
                                <li>
                                    <label class="mt-3">Senha:</label>
                                    <input class="form-control" type="password" name="us_senha" id="senha_cadastro" >
                                </li>
                                <li>
                                    <label class="mt-3">Confirme a Senha:</label>
                                    <input class="form-control" type="password" name="us_conf_senha" id="conf_senha_cadastro" >
                                </li>
                                <li>
                                    <button type="submit" class="btn btn-info mt-3">Confirmar</button>
                                </li>
                            </ul>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>

        <!-- =============== Fim do Cadastro ================== -->

      
    </div>
    </div>
    <!-- =============== Fim do Conteúdo ================== -->
