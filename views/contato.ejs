    <!-- =============== Conteúdo ================== -->
    <div class="container mt-5 pt-5">
        <header class="text-center">
            <h1>Books Online<br>
                <small>Market Place de Livros <%=promo%></small>
            </h1>
        </header>
        <!-- =============== Formulário de Contato ================== --> 
        <h3 class="alert alert-info mt-3">Envie sua mensagem</h3>
        <div class="card container p-3">
        <form action="" method="POST" class="container mt-2 mb-2">
            <div class="form-group">
              <label for="cad_nome">Nome</label>
              <input type="text" class="form-control" id="cad_nome" placeholder="Seu nome aqui" name="cad_nome">
            </div>
            <div class="form-group">
              <label for="cad_sobrenome">Sobrenome</label>
              <input type="text" class="form-control" id="cad_sobrenome" placeholder="Seu sobrenome aqui" name="cad_sobrenome">
            </div>
            <div class="form-group">
              <label for="cad_email">Email</label>
              <input type="email" class="form-control" id="cad_email"  name="cad_email" placeholder="Seu email aqui">
            </div>        
            <div class="form-group">
              <label for="cad_mensagem">Mensagem</label>
              <textarea name="cad_mensagem" class="form-control" placeholder="Seu mensagem aqui"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </form>
      </div>

        <!-- =============== Fim de Contato================== -->

    </div>
